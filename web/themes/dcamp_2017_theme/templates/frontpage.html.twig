<div class="frontpage-wrapper">
  <section id="intro" class="section">
    <div class="sub">
      <div class="content">
        <div class="top-area">
          <div class="inner">
            <h1 class="page-title">{% trans %} Short N Sweet {% endtrans %}</h1>
            <img class="letter d" src="{{ base_path ~ directory }}/images/letter-d.svg" width="250px"/>
            <img class="letter r" src="{{ base_path ~ directory }}/images/letter-r.svg" width="280px"/>
            <img class="letter u" src="{{ base_path ~ directory }}/images/letter-u.svg" width="440px"/>
            <img class="letter p" src="{{ base_path ~ directory }}/images/letter-p.svg" width="300px"/>
            <img class="letter al" src="{{ base_path ~ directory }}/images/letter-a.svg" width="540px"/>
            <a class="scroll-down" href="#"><img class="arrow" src="{{ base_path ~ directory }}/images/arrow.svg"
                                                 alt="Arrow down"/></a>
          </div>
        </div>
        <div class="bottom-area">
          {% trans %} Two days of Drupal presentations, workshops and networking {% endtrans %}
        </div>
      </div>
    </div>
  </section>
  <div id="scroll-to-anchor"></div>

  <section id="tickets" class="section">
    <div class="sub">
      <div class="content">
        <div class="buy-tickets">
          <a class="button" href="https://www.eventbrite.es/e/entradas-drupalcamp-spain-2017-33218432225" target="_blank">{% trans %}Buy ticket{% endtrans %}</a>
          <div class="content">
            <h3>{% trans %}Come to Drupalcamp{% endtrans %}</h3>
            <div class="deadline">{% trans %}Get your ticket for DrupalCamp and Business Day{% endtrans %}</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section id="speakers" class="section">
    <div class="sub">
      <div class="content">
        <h2>{% trans %}Featured speakers{% endtrans %}</h2>
        {{ speakers }}
      </div>
    </div>
  </section>
  <div class="maps">

    <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3038.1250180372567!2d-3.7021128843044817!3d40.40608116421036!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd42262c501652cd%3A0x610543bed2cd3041!2sLa+Casa+Encendida!5e0!3m2!1sen!2ses!4v1487744705148"
        width="100%" frameborder="0" style="border:0" allowfullscreen></iframe>

  </div>
  <section id="location" class="section">
    <div class="sub">
      <img class="venue-image" src="{{ base_path ~ directory }}/images/photos/casa_encendida.jpg"/>
      <div class="content">
        <h2>{% trans %}La Casa Encendida, Madrid {% endtrans %}</h2>
        {{ venue }}
      </div>
    </div>
  </section>

  <section id="become-a-sponsor" class="section">
    <div class="sub">
      <div class="content">
        <h2>{% trans %}Become a sponsor{% endtrans %}</h2>
        {{ become_a_sponsor }}
      </div>
    </div>
  </section>

  <section id="business-day" class="section">
    <div class="sub">

      <img class="business-day-image" src="{{ base_path ~ directory }}/images/photos/business_day.jpg"/>
      <div class="content">
        <h2>{% trans %}Business day{% endtrans %}</h2>
        {{ business_day }}
      </div>
    </div>
  </section>

  <section id="community" class="section">
    <div class="sub">
      <div class="content">
        <h2>{% trans %}Join our community{% endtrans %}</h2>
        {{ community }}
      </div>
    </div>
  </section>

  <section id="sponsors" class="section">
    <div class="sub">
      <div class="content">
        {{ sponsors }}
        <div id="individual_sponsors" class="individual-sponsors">
          <h3>Individual sponsors</h3>
          <ul class="individual-sponsors__list">
              {% for individual_sponsor in individual_sponsors %}
                <li class="individual-sponsors__item">
                  <a class="individual-sponsors__link" href="{{ individual_sponsor.getProfileUrl() }}" target="_blank">
                    <img src="{{ individual_sponsor.getHeadshot() ?: default_headshot  }}" class="individual-sponsors__img"/>
                    <div class="individual-sponsors__name">{{ individual_sponsor.getName() }}</div>
                    <div class="individual-sponsors__nick">({{ individual_sponsor.getNickname() }})</div>
                  </a>
                  <div class="individual-sponsors__social">
                    {% if individual_sponsor.getTwitter %}
                      <a class="social-media__link social-media__link--twitter" href="{{ individual_sponsor.getTwitter }}" target="_blank"></a>
                    {% endif %}
                    {% if individual_sponsor.getDrupal %}
                      <a class="social-media__link social-media__link--drupal" href="{{ individual_sponsor.getDrupal }}" target="_blank"></a>
                    {% endif %}
                  </div>
                </li>
              {% endfor %}
          </ul>
        </div>
      </div>
    </div>
  </section>

</div>
